<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cl.learn.redis.model.mapper.ProductMapper">

    <resultMap type="com.cl.learn.redis.model.entity.Product" id="ProductMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="userId" column="user_id" jdbcType="INTEGER"/>
        <result property="scanTotal" column="scan_total" jdbcType="INTEGER"/>
        <result property="isActive" column="is_active" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="ProductMap">
        select
          id, name, user_id, scan_total, is_active
        from sb_redis.product
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="ProductMap">
        select
          id, name, user_id, scan_total, is_active
        from sb_redis.product
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="ProductMap">
        select
          id, name, user_id, scan_total, is_active
        from sb_redis.product
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="userId != null">
                and user_id = #{userId}
            </if>
            <if test="scanTotal != null">
                and scan_total = #{scanTotal}
            </if>
            <if test="isActive != null">
                and is_active = #{isActive}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into sb_redis.product(name, user_id, scan_total, is_active)
        values (#{name}, #{userId}, #{scanTotal}, #{isActive})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update sb_redis.product
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="userId != null">
                user_id = #{userId},
            </if>
            <if test="scanTotal != null">
                scan_total = #{scanTotal},
            </if>
            <if test="isActive != null">
                is_active = #{isActive},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from sb_redis.product where id = #{id}
    </delete>

</mapper>