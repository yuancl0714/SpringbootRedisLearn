<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cl.learn.redis.model.mapper.PhoneFareMapper">

    <resultMap type="com.cl.learn.redis.model.entity.PhoneFare" id="PhoneFareMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="phone" column="phone" jdbcType="VARCHAR"/>
        <result property="fare" column="fare" jdbcType="NUMERIC"/>
        <result property="isActive" column="is_active" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="PhoneFareMap">
        select
          id, phone, fare, is_active
        from sb_redis.phone_fare
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="PhoneFareMap">
        select
          id, phone, fare, is_active
        from sb_redis.phone_fare
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="PhoneFareMap">
        select
          id, phone, fare, is_active
        from sb_redis.phone_fare
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="phone != null and phone != ''">
                and phone = #{phone}
            </if>
            <if test="fare != null">
                and fare = #{fare}
            </if>
            <if test="isActive != null">
                and is_active = #{isActive}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into sb_redis.phone_fare(phone, fare, is_active)
        values (#{phone}, #{fare}, #{isActive})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update sb_redis.phone_fare
        <set>
            <if test="phone != null and phone != ''">
                phone = #{phone},
            </if>
            <if test="fare != null">
                fare = #{fare},
            </if>
            <if test="isActive != null">
                is_active = #{isActive},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from sb_redis.phone_fare where id = #{id}
    </delete>

</mapper>