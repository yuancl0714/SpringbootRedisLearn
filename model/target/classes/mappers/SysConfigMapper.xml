<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cl.learn.redis.model.mapper.SysConfigMapper">

    <resultMap type="com.cl.learn.redis.model.entity.SysConfig" id="SysConfigMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="type" column="type" jdbcType="VARCHAR"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="code" column="code" jdbcType="VARCHAR"/>
        <result property="value" column="value" jdbcType="VARCHAR"/>
        <result property="orderBy" column="order_by" jdbcType="INTEGER"/>
        <result property="isActive" column="is_active" jdbcType="INTEGER"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="SysConfigMap">
        select
          id, type, name, code, value, order_by, is_active, create_time
        from sb_redis.sys_config
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="SysConfigMap">
        select
          id, type, name, code, value, order_by, is_active, create_time
        from sb_redis.sys_config
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="SysConfigMap">
        select
          id, type, name, code, value, order_by, is_active, create_time
        from sb_redis.sys_config
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="type != null and type != ''">
                and type = #{type}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="code != null and code != ''">
                and code = #{code}
            </if>
            <if test="value != null and value != ''">
                and value = #{value}
            </if>
            <if test="orderBy != null">
                and order_by = #{orderBy}
            </if>
            <if test="isActive != null">
                and is_active = #{isActive}
            </if>
            <if test="createTime != null">
                and create_time = #{createTime}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into sb_redis.sys_config(type, name, code, value, order_by, is_active, create_time)
        values (#{type}, #{name}, #{code}, #{value}, #{orderBy}, #{isActive}, #{createTime})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update sb_redis.sys_config
        <set>
            <if test="type != null and type != ''">
                type = #{type},
            </if>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="code != null and code != ''">
                code = #{code},
            </if>
            <if test="value != null and value != ''">
                value = #{value},
            </if>
            <if test="orderBy != null">
                order_by = #{orderBy},
            </if>
            <if test="isActive != null">
                is_active = #{isActive},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from sb_redis.sys_config where id = #{id}
    </delete>

</mapper>