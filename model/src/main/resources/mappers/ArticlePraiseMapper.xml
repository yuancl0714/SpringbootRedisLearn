<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cl.learn.redis.model.mapper.ArticlePraiseMapper">

    <resultMap type="com.cl.learn.redis.model.entity.ArticlePraise" id="ArticlePraiseMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="articleId" column="article_id" jdbcType="INTEGER"/>
        <result property="userId" column="user_id" jdbcType="INTEGER"/>
        <result property="pTime" column="p_time" jdbcType="TIMESTAMP"/>
        <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="ArticlePraiseMap">
        select
          id, article_id, user_id, p_time, update_time
        from sb_redis.article_praise
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="ArticlePraiseMap">
        select
          id, article_id, user_id, p_time, update_time
        from sb_redis.article_praise
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="ArticlePraiseMap">
        select
          id, article_id, user_id, p_time, update_time
        from sb_redis.article_praise
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="articleId != null">
                and article_id = #{articleId}
            </if>
            <if test="userId != null">
                and user_id = #{userId}
            </if>
            <if test="pTime != null">
                and p_time = #{pTime}
            </if>
            <if test="updateTime != null">
                and update_time = #{updateTime}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into sb_redis.article_praise(article_id, user_id, p_time, update_time)
        values (#{articleId}, #{userId}, #{pTime}, #{updateTime})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update sb_redis.article_praise
        <set>
            <if test="articleId != null">
                article_id = #{articleId},
            </if>
            <if test="userId != null">
                user_id = #{userId},
            </if>
            <if test="pTime != null">
                p_time = #{pTime},
            </if>
            <if test="updateTime != null">
                update_time = #{updateTime},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from sb_redis.article_praise where id = #{id}
    </delete>

</mapper>